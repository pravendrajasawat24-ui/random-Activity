    <footer>
        <p>Powered by the Bored API • Made with vanilla JavaScript</p>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const activityTitle = document.getElementById('activity-title');
            const activityType = document.getElementById('activity-type');
            const activityParticipants = document.getElementById('activity-participants');
            const activityAccessibility = document.getElementById('activity-accessibility');
            const getActivityBtn = document.getElementById('get-activity');
            const typeFilter = document.getElementById('type-filter');
            const loadingElement = document.getElementById('loading');
            const errorElement = document.getElementById('error-message');
            
            // Fetch a random activity on page load
            fetchRandomActivity();
            
            // Add event listener to the button
            getActivityBtn.addEventListener('click', fetchRandomActivity);
            
            // Function to fetch a random activity
            function fetchRandomActivity() {
                // Show loading state
                loadingElement.style.display = 'block';
                errorElement.style.display = 'none';
                getActivityBtn.disabled = true;
                
                // Build the API URL
                let apiUrl = 'https://www.boredapi.com/api/activity';
                const selectedType = typeFilter.value;
                
                if (selectedType) {
                    apiUrl += ?type=${selectedType};
                }
                
                // Fetch from the API
                fetch(apiUrl)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(data => {
                        // Check if we got an activity
                        if (data.error) {
                            throw new Error(data.error);
                        }
                        
                        // Update the UI with the activity data
                        updateActivityCard(data);
                        
                        // Hide loading state
                        loadingElement.style.display = 'none';
                        getActivityBtn.disabled = false;
                    })
                    .catch(error => {
                        console.error('Error fetching activity:', error);
                        
                        // Show error message
                        loadingElement.style.display = 'none';
                        errorElement.style.display = 'block';
                        getActivityBtn.disabled = false;
                    });
            }
            
            // Function to update the activity card with data
            function updateActivityCard(activity) {
                activityTitle.textContent = activity.activity;
                activityType.textContent = formatType(activity.type);
                activityParticipants.textContent = activity.participants;
                
                // Format accessibility as percentage
                const accessibilityValue = Math.round((1 - activity.accessibility) * 100);
                activityAccessibility.textContent = ${accessibilityValue}%;
                
                // Color code accessibility
                if (accessibilityValue >= 70) {
                    activityAccessibility.style.color = '#4caf50'; // Green
                } else if (accessibilityValue >= 40) {
                    activityAccessibility.style.color = '#ff9800'; // Orange
                } else {
                    activityAccessibility.style.color = '#f44336'; // Red
                }
            }
            
            // Helper function to format activity type
            function formatType(type) {
                return type.charAt(0).toUpperCase() + type.slice(1);
            }
        });
    </script>
